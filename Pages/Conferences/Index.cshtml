@page
@model APTA.Pages.Conferences.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Conferences</h1>

<p>
    <a asp-page="Create">Create a Conference</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Organiser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Conference) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organiser.OrganiserID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ConferenceID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ConferenceID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ConferenceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
